<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232228"
    tools:context=".view.Moreinfo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#34333A"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

<!--
            <ImageView
                android:id="@+id/imgMoreInfo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"/>
            -->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgMoreInfo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFC107"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""
                    android:textColor="#ffff"
                    android:layout_marginEnd="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txtPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:text=""
                    android:textStyle="bold"/>
            </LinearLayout>

            <RatingBar
                android:id="@+id/RatingMore"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:isIndicator="true"
                android:numStars="5"
                android:max="5"
                android:layout_gravity="center_horizontal"
                android:progressTint="#FFC107"
                android:rating="3"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:scaleX="0.5"
                android:scaleY="0.5" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:paddingStart="20dp"
                android:paddingBottom="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_height="wrap_content"
                android:text="kdekdnekjdnekjdejdbejhdbekdjbekdbekjdbekdjbekdjbekdjbekdjbekdjbekdjbekdjbekjdbekdjbekjdbekdjbekdjb"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>